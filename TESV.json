{
	"launchtype": "winery",
	"imports":
	[
		{
			"file": "common.json"
		}
	],
	"wine.wpid": "Steam",
	"subsystem.xboxlayout": "xpad",
	"subsystem.glxosd": true,
	"subsystem.xinput-mouse-profile": "noaccel",
	"subsystem.nvidia-optimizations": "glthread,vblank",
	"wine.workdir": "%PREFIX%/Skyrim",
	"wine.exec": "skse_loader.exe",
	"variables":
	[
		{
			"name": "OVERLAY",
			"value": "%STEAMAPPS%/Skyrim.mods"
		},
		{
			"name": "UNDERLAY",
			"value": "%STEAMAPPS%/Skyrim.original"
		},
		{
			"name": "GAMETIMER_LABEL",
			"value": "Skyrim"
		}
	],
	"wine.prerun":
	[
		{
			"priority": 0,
			"display.title": "Mounting overlayfs",
			"sys.exec": "gksudo --description \"mounting overlayfs\" -- mount -t overlayfs -o lowerdir=\"%UNDERLAY%\",upperdir=\"%OVERLAY%\",rw overlayfs \"%STARTDIR%\""
		},
		{
			"priority": 1,
			"display.title": "Wine LBA patch",
			"wine.exec": "%TOOLS%/wine-lba-patch.exe",
			"wine.workdir": "%STEAMAPPS%/Skyrim"
		}
	],
	"wine.postrun":
	[
		{
			"display.title": "Unmounting overlayfs",
			"sys.exec": "gksudo -- umount \"%STEAMAPPS%/Skyrim\""
		}
	],
	"desktop.file":
	{
		"desktop.icon": "skyrim",
		"desktop.displayname": "The Elder Scrolls V: Skyrim",
		"desktop.description": "EPIC FANTASY REBORN The next chapter in the highly anticipated Elder Scrolls saga arrives from the makers of the 2006 and 2008 Games of the Year, Bethesda Game Studios. Skyrim reimagines and revolutionizes the open-world fantasy epic, bringing to life a complete virtual world open for you to explore any way you choose.",
		"desktop.wmclass": "TESV.exe",
		"desktop.action":
		{
			"desktop.displayname": "Skyrim launcher",
			"wine.exec": "SkyrimLauncher.exe",
			"wine.workdir": "%STEAMAPPS%/Skyrim"
		}
	}
}
