{
	"imports":
	[
		{
			"file": "native-common.json"
		}
	],
	"variables":
	[
		{
			"name": "STEAMAPPS",
			"value": "%WINEPREFIX_ROOT%/Steam/drive_c/Program Files/Steam/steamapps/common"
		},
		{
			"name": "WINEPREFIX",
			"value": "%WINEPREFIX_ROOT%/%WINEPREFIX_ID%"
		},
		{
			"name": "WINEPREFIX_ROOT",
			"value": "%HOME%/.local/share/wineprefixes"
		},
		{
			"name": "TOOLS",
			"value": "%HOME%/.local/share/winescripts/tools"
		},
		{
			"name": "WINEBUILDS",
			"value": "%HOME%/.local/share/wineversions"
		}
	],
	"subsystems":
	[
		{
			"type": "constant",
			"environment":
			[
				{
					"type": "variable",
					"name": "PULSE_LATENCY_MSEC",
					"value": "60"
				}
			]
		}
	],
	"wine.postrun":
	[
		{
			"title": "Setting display gamma",
			"sys.exec": "xgamma -gamma 1.0"
		}
	],
	"systems":
	[
		{
			"type": "launcher",
			"identifier": "winery",
			"config-prefix": "wine",
			"inherit": "system",
			"launch-prefix": "wine",
			"variables":
			[
				{
					"type": "config-input",
					"name": "WINEVERSION",
					"input": "version"
				},
				{
					"type": "config-input",
					"name": "WINEDLLOVERRIDES",
					"input": "dlloverrides",
					"default": "winemenubuilder.exe=d"
				},
				{
					"type": "config-input",
					"name": "WINEDEBUG",
					"input": "debug-opts",
					"default": "-all"
				},
				{
					"type": "config-input",
					"name": "WINEPREFIX_ID",
					"input": "wineprefix-id"
				},
				{
					"type": "config-input",
					"name": "STARTDIR",
					"input": "workdir"
				}
			],
			"environment":
			[
				{
					"type": "variable",
					"name": "PATH",
					"value": "%WINEBUILDS%/%WINEVERSION%/bin:%PATH%"
				},
				{
					"type": "variable",
					"name": "LD_LIBRARY_PATH",
					"value": "%WINEBUILDS%/%WINEVERSION%/lib:%WINEBUILDS%/%WINEVERSION%/lib64"
				},
				{
					"type": "variable",
					"name": "XDG_DATA_DIRS",
					"value": "%WINEBUILDS%/%WINEVERSION%/share:%XDG_DATA_DIRS%"
				},
				{
					"type": "variable",
					"name": "WINEPREFIX",
					"value": "%WINEPREFIX%"
				},
				{
					"type": "variable",
					"name": "WINEDLLOVERRIDES",
					"value": "%WINEDLLOVERRIDES%"
				},
				{
					"type": "variable",
					"name": "WINEARCH",
					"value": "win32"
				},
				{
					"type": "variable",
					"name": "WINEDEBUG",
					"value": "%WINEDEBUG%"
				}
			]
		}
	]
}
