{
	"variables":
	[
		{
			"name": "GAMETIMER_DIR",
			"value": "%HOME%/.local/share/gametimer"
		},
		{
			"name": "XINPUT_MOUSE",
			"value": "'Logitech USB-PS/2 Optical Mouse'"
		}
	],
	"subsystems":
	[
		{
			"type": "bool",
			"enabler": "glxosd",
			"appearance":
			{
				"desktop.icon": "",
				"desktop.title": "Displaying GPU stats"
			},
			"environment":
			[
				{
					"type": "run-prefix",
					"sys.exec.prefix": "%TOOLS%/glxosd/glxosd"
				}
			]
		},
		{
			"type": "substitution",
			"enabler": "gametimer",
			"variable": "GAMETIMER_LABEL",
			"appearance":
			{
				"desktop.icon": "",
				"desktop.title": "Recording game time"
			},
			"environment":
			[
				{
					"type": "run-prefix",
					"sys.exec.prefix": "/usr/bin/time --format=%e -a -o %GAMETIMER_DIR%/%GAMETIMER_LABEL%.log"
				}
			]
		},
		{
			"type": "substitution",
			"enabler": "xboxlayout",
			"appearance":
			{
				"desktop.icon": "",
				"desktop.title": "Modifying Xbox 360 controller layout"
			},
			"variable": "XBOX_CONTROL_LAYOUT",
			"sys.exec": "xboxmgr --config --layout '%XBOX_CONTROL_LAYOUT%'",
			"trigger": "sys-prerun"
		},
		{
			"type": "option",
			"enabler": "nvidia-optimizations",
			"appearance":
			{
				"desktop.icon": "",
				"desktop.title": "Setting Nvidia OpenGL options"
			},
			"options":
			[
				{
					"id": "glthread",
					"environment":
					[
						{
							"type": "variable",
							"name": "__GL_THREADED_OPTIMIZATIONS",
							"value": "1"
						},
						{
							"type": "variable",
							"name": "LD_PRELOAD",
							"value": "libpthread.so.0 libGL.so.1"
						}
					]
				},
				{
					"id": "vblank",
					"environment":
					[
						{
							"type": "variable",
							"name": "__GL_SYNC_TO_VBLANK",
							"value": "1"
						}
					]
				}
			]
		},
		{
			"type": "select",
			"enabler": "xinput-mouse-profile.pre",
			"trigger": "sys-prerun",
			"sys.exec": "xinput set-prop %XINPUT_MOUSE% %VARIABLE% %VALUE%",
			"appearance":
			{
				"desktop.icon": "mouse",
				"desktop.title": "Setting mouse profile"
			},
			"selections":
			[
				{
					"listname": "noaccel",
					"variables":
					[
						{
							"name": "'Device Accel Profile'",
							"value": "-1"
						},
						{
							"name": "'Device Accel Constant Deceleration'",
							"value": "1.5"
						}
					]
				},
				{
					"listname": "desktop",
					"variables":
					[
						{
							"name": "'Device Accel Profile'",
							"value": "0"
						},
						{
							"name": "'Device Accel Constant Deceleration'",
							"value": "1"
						}
					]
				}
			]
		},
		{
			"type": "select",
			"enabler": "xinput-mouse-profile.post",
			"trigger": "sys-postrun",
			"sys.exec": "xinput set-prop %XINPUT_MOUSE% %VARIABLE% %VALUE%",
			"appearance":
			{
				"desktop.icon": "mouse",
				"desktop.title": "Resetting mouse profile"
			},
			"selections":
			[
				{
					"listname": "noaccel",
					"variables":
					[
						{
							"name": "'Device Accel Profile'",
							"value": "-1"
						},
						{
							"name": "'Device Accel Constant Deceleration'",
							"value": "1.5"
						}
					]
				},
				{
					"listname": "desktop",
					"variables":
					[
						{
							"name": "'Device Accel Profile'",
							"value": "0"
						},
						{
							"name": "'Device Accel Constant Deceleration'",
							"value": "1"
						}
					]
				}
			]
		}
		
	]
}
